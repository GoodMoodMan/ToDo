{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js",
	  "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
	  "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      }
    }
  ]
}
