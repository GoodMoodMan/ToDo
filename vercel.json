{
  "version": 2,
  "builds": [
    { "src": "server/**/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "server/index.js" },
    { "src": "/(.*\\.(json|js))$", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
